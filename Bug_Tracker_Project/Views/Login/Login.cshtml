@{
    ViewBag.Title = "Home Page";
}

<div style="background-color: transparent !important" class="jumbotron">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="align-items-center">
            <div class="card bg-body-color text-black" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">

                    <div class="align-items-center">
                        <h2 class="fw-bold mb-2 text-uppercase">Bug Tracker Login</h2>
                        <br />
                        <form action="@Url.Action("Login", "Login")" method="post">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email address</label>
                                <input type="email" class="form-control center-block" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="email">
                            </div>
                            <br />
                            <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input type="password" class="form-control center-block" id="exampleInputPassword1" placeholder="Password" name="password">
                            </div>
                            <br />
                            <button type="submit" class="btn btn-primary">Login</button>
                        </form>
                        <br /><br />
                        <p class="small mb-5 pb-lg-2"><a class="text-primary-50" href="#!">Forgot password?</a></p>
                    </div>
                    <div>
                        <p class="mb-0">Don't have an account? @Html.ActionLink("Sign Up", "Index", "Register")</p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
